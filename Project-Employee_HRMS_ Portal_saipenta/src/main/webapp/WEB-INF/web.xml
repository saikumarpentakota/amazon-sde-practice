<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>HRMS Portal</display-name>
    <description>Human Resource Management System</description>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.hrms.servlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/api/employees/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PayrollServlet</servlet-name>
        <servlet-class>com.hrms.servlet.PayrollServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayrollServlet</servlet-name>
        <url-pattern>/api/payroll/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>com.hrms.servlet.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/api/attendance/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LeaveServlet</servlet-name>
        <servlet-class>com.hrms.servlet.LeaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeaveServlet</servlet-name>
        <url-pattern>/api/leave/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BatchServlet</servlet-name>
        <servlet-class>com.hrms.servlet.BatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BatchServlet</servlet-name>
        <url-pattern>/api/batch/*</url-pattern>
    </servlet-mapping>



    <!-- JSP Configuration -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>xpoweredBy</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>