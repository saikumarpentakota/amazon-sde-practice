<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>HRMS Application</display-name>

    <!-- Register all controllers -->
    <servlet>
        <servlet-name>EmployeeController</servlet-name>
        <servlet-class>org.example.controller.EmployeeController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>PayrollController</servlet-name>
        <servlet-class>org.example.controller.PayrollController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>org.example.controller.AttendanceController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LeaveController</servlet-name>
        <servlet-class>org.example.controller.LeaveController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>BatchController</servlet-name>
        <servlet-class>org.example.controller.BatchController</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>EmployeeController</servlet-name>
        <url-pattern>/api/employees/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PayrollController</servlet-name>
        <url-pattern>/api/payroll/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/api/attendance/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LeaveController</servlet-name>
        <url-pattern>/api/leave/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>BatchController</servlet-name>
        <url-pattern>/api/batch/*</url-pattern>
    </servlet-mapping>

</web-app>
